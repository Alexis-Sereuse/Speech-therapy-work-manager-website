@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Mot de passe oublié?";
}

@section AdditionnalStyles {
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap-grid.css" />
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap-reboot.css" />
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap-utilities.css" />
}

<div class="add-page-body-container">
    <h1 style="margin-top: 3%;">@ViewData["Title"]</h1>
    <h4 style="text-align: center;">Entrez your email.</h4>
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Réinitialiser mot de passe</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
